{
  "name": "hoopofy",
  "version": "0.0.1",
  "description": "Hoopofy project",
  "main": "app/index.js",
  "repository": "git@github.com:samyouaret/hoopofy.git",
  "author": "samyouaret <samyouaret13@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
